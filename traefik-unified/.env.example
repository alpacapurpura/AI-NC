# ==============================================
# CONFIGURACIÓN GLOBAL - TRAEFIK UNIFIED DEPLOY
# ==============================================

# Dominios configurados (cambia estos valores)
FLOWISE_DOMAIN=flowise.tudominio.com
N8N_DOMAIN=n8n.tudominio.com

# Email para Let's Encrypt SSL (cambia este valor)
LETSENCRYPT_EMAIL=tu-email@ejemplo.com

# ==============================================
# CONFIGURACIÓN DE FLOWISE
# ==============================================

# Credenciales de acceso a Flowise (cambia estos valores)
FLOWISE_USERNAME=tu_usuario
FLOWISE_PASSWORD=tu_contraseña_segura

# Clave secreta para Flowise (genera una clave segura)
FLOWISE_SECRET_KEY=genera_una_clave_secreta_larga_y_segura_aqui

# ==============================================
# CONFIGURACIÓN DE N8N
# ==============================================

# Configuración de PostgreSQL (cambia estos valores)
POSTGRES_USER=n8n
POSTGRES_PASSWORD=genera_una_contraseña_segura_para_postgres
POSTGRES_DB=n8n

# Claves de seguridad para n8n (genera claves largas y seguras)
N8N_ENCRYPTION_KEY=genera_una_clave_de_encriptacion_muy_larga_y_segura_aqui
N8N_USER_MANAGEMENT_JWT_SECRET=genera_un_jwt_secret_muy_largo_y_seguro_aqui

# Configuración de zona horaria
TZ=America/Lima

# ==============================================
# OPCIONES AVANZADAS (OPCIONAL)
# ==============================================

# Configuración de límites de recursos (descomenta si es necesario)
# FLOWISE_MEMORY_LIMIT=1g
# FLOWISE_CPU_LIMIT=1.0
# N8N_MEMORY_LIMIT=2g
# N8N_CPU_LIMIT=2.0
# POSTGRES_MEMORY_LIMIT=1g
# POSTGRES_CPU_LIMIT=1.0

# Configuración de backup (descomenta si es necesario)
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=7

# Configuración de monitoreo (descomenta si es necesario)
# ENABLE_MONITORING=true
# GRAFANA_DOMAIN=grafana.tudominio.com
# PROMETHEUS_DOMAIN=prometheus.tudominio.com